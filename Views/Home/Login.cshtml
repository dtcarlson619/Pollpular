@model User

<div class="bg-light rounded box-shadow p-3 m-3">
    <h2 class="text-primary">Login</h2>
    <form method="POST" asp-action="Login" asp-controller="Home">
        <div class="form-group">
            <label asp-for="Username">Username:</label>
            <input class="form-control" type="text" asp-for="Username">
            <span class="text-danger" asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input class="form-control" type="password" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <button class="btn btn-primary" type="submit">Login</button>
    </form>
    <a asp-action="Register" asp-controller="Home">No account? Register now!</a>
</div>